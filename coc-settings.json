{
    "coc.preferences.jumpCommand": "vsplit",
    "languageserver": {
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "efm": {
            "command": "~/go/bin/efm-langserver",
            "args": ["-c", "~/.config/efm-langserver/config.yaml"],
            "filetypes": [
                "vim",
                "markdown",
                "yaml"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "python.analysis.openFilesOnly": false,
    "python.autoUpdateLanguageServer": true,
    "python.jediEnabled": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.pyenv/shims/black",
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--format=pylint",
        "--count",
        "--verbose"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py"
    ],
    "python.linting.lintOnSave": true,
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django"
    ],
    "python.pipenvPath": "/usr/local/bin/pipenv",
    "python.pythonPath": "~/.pyenv/shims/python",
    "python.sortImports.path": "~/.pyenv/shims/isort",
    "python.sortImports.args": [],
    "python.venvPath": "${workspaceFolder}",
    "python.venvFolders": [
        "${workspaceFolder}/venv"
    ],
    "suggest.triggerAfterInsertEnter": false,
    "suggest.timeout": 500,
    "suggest.noselect": false,
    "suggest.detailField":"abbr",
    "suggest.snippetIndicator": "ðŸŒŸ",
    "suggest.triggerCompletionWait": 100,
    "suggest.echodocSupport": true,
    "suggest.completionItemKindLabels": {
        "keyword": "\uf1de",
        "variable": "\ue79b",
        "value": "\uf89f",
        "operator": "\u03a8",
        "function": "\u2A15",
        "reference": "\ufa46",
        "constant": "\uf8fe",
        "method": "\uf09a",
        "struct": "\ufb44",
        "class": "\uf0e8",
        "interface": "\uf417",
        "text": "\u2663",
        "enum": "\uf435",
        "enumMember": "\uf02b",
        "module": "\uf530",
        "color": "\ue22b",
        "property": "\ue624",
        "field": "\uf6a6",
        "unit": "\uf475",
        "event": "\ufacd",
        "file": "\uf723",
        "folder": "\uf114",
        "snippet": "\ue60b",
        "typeParameter": "\uf728", "default": "\uf29c"
    },
}
